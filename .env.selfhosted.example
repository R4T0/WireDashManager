
# Configurações para WireDash Self-Hosted
# Use estas configurações para modo completamente independente

# Configuração da aplicação para self-hosted (PADRÃO)
VITE_USE_LOCAL_SUPABASE=false
VITE_SELF_HOSTED=true
VITE_API_URL=http://localhost:3000

# Configuração do PostgreSQL (usado pelo Docker Compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=wireguard_manager
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/wireguard_manager

# Configuração da aplicação
NODE_ENV=production
PORT=8080

# Configuração do Backend
BACKEND_PORT=3000

# Configuração de logs
LOG_LEVEL=info

# Configuração de backup
BACKUP_RETENTION_DAYS=7

# Configuração de segurança (ALTERE EM PRODUÇÃO!)
SESSION_SECRET=change-this-in-production
JWT_SECRET=change-this-in-production

# Configuração Mikrotik (opcional)
MIKROTIK_HOST=
MIKROTIK_PORT=8728
MIKROTIK_USERNAME=
MIKROTIK_PASSWORD=
